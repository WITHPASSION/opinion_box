Alias /beanstalk_console /usr/local/share/beanstalk_console/public/

<Directory /usr/local/share/beanstalk_console/public/>
   AddDefaultCharset UTF-8

   <IfModule mod_authz_core.c>
     # Apache 2.4
     <RequireAny>
       Require ip 127.0.0.1
       # VirtualBox Host
       Require ip 10.0.2.2
       Require ip ::1
     </RequireAny>
   </IfModule>
   <IfModule !mod_authz_core.c>
     # Apache 2.2
     Order Deny,Allow
     Deny from All
     Allow from 127.0.0.1
     # VirtualBox Host
     Allow from 10.0.2.2
     Allow from ::1
   </IfModule>
</Directory>
